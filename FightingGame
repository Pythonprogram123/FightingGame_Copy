                        TrophyCount = int(TrophyCount + 8)
                        Tokens = int(Tokens + 50)
                        Coins = int(Coins + 100)
                        break
                    elif ScrewBot_BaseHealth < 0:
                        ScrewBot_BaseHealth = ScrewBot_Fixed_Health
                        print("Opponent wins")
                        print("Better luck next time")
                        ScrewBot_Trophies += 3
                        Tokens = int(Tokens + 20)
                        break
                elif ChoiceFight == 2:
                    print("Healing.........")
                    ChocoRobo_BaseHealth = ChocoRobo_BaseHealth + ChocoRobo_Heal
                    print("Opponent health = ", OpponentHealth)
                    print("Your health = ", ScrewBot_BaseHealth, "+", ChocoRobo_Heal)
                    if OpponentHealth < 0:
                        ScrewBot_BaseHealth = ScrewBot_Fixed_Health
                        OpponentHealth = 1200
                        print("You wins")
                        ScrewBot_Trophies += 8
                        WinMatch = int(WinMatch + 1)
                        TrophyCount = int(TrophyCount + 8)
                        Tokens = int(Tokens + 50)
                        Coins = int(Coins + 100)
                        break
                    elif ScrewBot_BaseHealth < 0:
                        ScrewBot_BaseHealth = ScrewBot_Fixed_Health
                        print("Opponent wins")
                        print("Better luck next time")
                        ScrewBot_Trophies += 3
                        Tokens = int(Tokens + 20)
                        break
                elif ChoiceFight == 3:
                    if ChocoRobo_Heal_Times == 1:
                        ChocoRobo_Heal_Times -= 1
                    else:
                        ChocoRobo_Spin_Times += 1
                        if Spotted == 1:
                            OpponentHealth = OpponentHealth - ScrewBot_Spotted + Spotted_DamageBoost
                        else:
                            OpponentHealth = OpponentHealth - ScrewBot_Spotted
                        OpponentHealth = OpponentHealth - ScrewBot_Spotted
                        print("Opponent health = ", OpponentHealth, "-", ScrewBot_Spotted)
                        print("Your Health = ", ScrewBot_BaseHealth)
                        Spotted += 1
                        if OpponentHealth < 0:
                            ScrewBot_BaseHealth = ScrewBot_Fixed_Health
                            OpponentHealth = 1200
                            print("You wins")
                            ScrewBot_Trophies += 8
                            WinMatch = int(WinMatch + 1)
                            TrophyCount = int(TrophyCount + 8)
                            Tokens = int(Tokens + 50)
                            Coins = int(Coins + 100)
                            break
                        elif ScrewBot_BaseHealth < 0:
                            ScrewBot_BaseHealth = ScrewBot_Fixed_Health
                            print("Opponent wins")
                            print("Better luck next time")
                            ScrewBot_Trophies += 3
                            Tokens = int(Tokens + 20)
                            break
                elif ChoiceFight == 4:
                    if ChocoRobo_Heal_Times == 1:
                        ChocoRobo_Heal_Times -= 1
                    else:
                        ChocoRobo_Spin_Times += 1

                        OpponentHealth = OpponentHealth - ScrewBot_Spotted
                        print("Opponent health = ", OpponentHealth, "-", ScrewBot_Spotted)
                        print("Your Health = ", ScrewBot_BaseHealth)
                        Spotted += 1
                        if OpponentHealth < 0:
                            ScrewBot_BaseHealth = ScrewBot_Fixed_Health
                            OpponentHealth = 1200
                            print("You wins")
                            ScrewBot_Trophies += 8
                            WinMatch = int(WinMatch + 1)
                            TrophyCount = int(TrophyCount + 8)
                            Tokens = int(Tokens + 50)
                            Coins = int(Coins + 100)
                            break
                        elif ScrewBot_BaseHealth < 0:
                            ScrewBot_BaseHealth = ScrewBot_Fixed_Health
                            print("Opponent wins")
                            print("Better luck next time")
                            ScrewBot_Trophies += 3
                            Tokens = int(Tokens + 20)
                            break
                print("***************************************************************")
                print("***************************************************************")
                print("Opponents Turn")
                Opponent_Turn = random.randrange(2, 4)
                if Opponent_Turn == 2:
                    print("He attacks")
                    if ScrewBot_DefensiveShield == 1:
                        ScrewBot_BaseHealth = ScrewBot_BaseHealth - (OpponentDam - Damage_Reduction)
                        print("Opponent health = ", OpponentHealth)
                        print('Your Health = ', ScrewBot_BaseHealth, '-', OpponentDam - Damage_Reduction)
                    else:
                        ScrewBot_BaseHealth = ScrewBot_BaseHealth - OpponentDam
                        print("Opponent health = ", OpponentHealth)
                        print('Your Health = ', ScrewBot_BaseHealth, '-', OpponentDam)
                else:
                    if ScrewBot_DefensiveShield == 1:
                        print("He Used Oppo_Special")
                        ScrewBot_BaseHealth = ScrewBot_BaseHealth - (OpponentSpecial - Damage_Reduction)
                        print("Opponent health = ", OpponentHealth)
                        print('Your Health = ', ScrewBot_BaseHealth, '-', OpponentSpecial - Damage_Reduction)
                    else:
                        print("He Used Oppo_Special")
                        ScrewBot_BaseHealth = ScrewBot_BaseHealth - OpponentSpecial
                        print("Opponent health = ", OpponentHealth)
                        print('Your Health = ', ScrewBot_BaseHealth, '-', OpponentSpecial)
        else:
            print("First Select Unlocked Character")

